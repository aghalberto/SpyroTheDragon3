<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="guide_imageview">
        <!--app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="parent"-->
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:src">@drawable/pulse</item>
    </style>

    <style name="guide_textview">
        <item name="layout_constraintStart_toStartOf">@id/pulseImage</item>
        <item name="layout_constraintBottom_toTopOf">@id/pulseImage</item>
        <item name="layout_constraintTop_toTopOf">@id/pulseImage</item>
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">@dimen/text_guide_line</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0</item>
    </style>

    <style name="guide_checklist">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/text_guide_line</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:alpha">0.2</item>
    </style>

    <style name="guide_checklist_checked">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/text_guide_line</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:alpha">1</item>
    </style>

    <style name="guide_button">
        <item name="android:layout_gravity">left|top</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_marginBottom">60dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="guide_button_next">
        <item name="android:layout_gravity">right|top</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_marginBottom">60dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backdropColor">@color/purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="guide_textwelcome">guide_textwelcome>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_heading</item>
        <item name="backgroundColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="guide_subtitle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="backgroundColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>